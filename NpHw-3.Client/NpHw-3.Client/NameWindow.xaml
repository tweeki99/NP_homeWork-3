<Window x:Class="NpHw_3.Client.NameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NpHw_3.Client"
        mc:Ignorable="d"
        Title="NameWindow" Height="135.26" Width="275.867">
    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock Margin="2">Введите имя:</TextBlock>
            <TextBox Margin="3" Background="LightGray" Name="nameBox" Grid.Row="1"></TextBox>
            <Button Margin="10" IsDefault="True" Click="Accept_Click">OK</Button>
        </StackPanel>
    </Grid>
</Window>
